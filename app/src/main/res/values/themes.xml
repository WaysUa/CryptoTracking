<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CryptoTracking" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="Theme.CryptoSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CryptoTracking</item>
    </style>
</resources>